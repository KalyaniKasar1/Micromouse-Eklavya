   -->
    
  <link name="link_chassis">
    <!-- pose and inertial -->
    <pose>0 0 0.1 0 0 0</pose>
    
    <inertial>
      <mass value="0.5"/>
      <origin rpy="0  0  0" xyz="0 0.01 0"/>
      <inertia ixx="0.00022083" ixy="0" ixz="0" iyy="0.00022083" iyz="0" izz="0.00040833"/>
    </inertial>
    
    <collision name="link_chassis_collision">
      <origin rpy="0  0  0" xyz="0     0    0"/>
      <geometry>
        <box size="0.07 0.07 0.01"/>
      </geometry>
    </collision>
    
    <visual name="link_chassis_visual">
      <origin rpy="0  0  0" xyz="0     0    0"/>
      <geometry>
        <box size="0.07 0.07 0.01"/>
      </geometry>
    </visual>
</link>
  
  <!-- Create wheel right -->  
    
  <link name="link_right_wheel">    
    <inertial>
      <mass value="0.2"/>
      <origin rpy="0 1.5707 0" xyz="1 1 1"/>
      <inertia ixx="2.3e-06" ixy="0" ixz="0" iyy="2.3e-06" iyz="0" izz="4.5e-06"/>
    </inertial>
    
    <collision name="link_right_wheel_collision">
      <origin rpy="0 1.5707 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.0087"/>
      </geometry>
    </collision>
    
    <visual name="link_right_wheel_visual">
      <origin rpy="0 1.5707 0" xyz="1 1 1"/>
      <geometry>
        <cylinder length="0.01" radius="0.0087"/>
      </geometry>      
    </visual>
    
  </link>
    
  <!--   Joint for right wheel  -->
  <joint name="joint_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.004  0    0"/>
    <child link="link_right_wheel" />
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="1 0 0"/>
    <limit effort="5" velocity="6"/>
    <joint_properties damping="10000.0" friction="10000.0" />
  </joint>  
  <transmission name="right_wheel_trans">
     <type>transmission_interface/SimpleTransmission</type>
     <actuator name="right_wheel_motor">
       <hardwareInterface>VelocityJointInterface</hardwareInterface>
       <mechanicalReduction>7</mechanicalReduction>
     </actuator>
     <joint name="joint_right_wheel">
       <hardwareInterface>VelocityJointInterface</hardwareInterface>
     </joint>
  </transmission>
    
  <!-- Left Wheel link -->
    
  <link name="link_left_wheel">    
    <inertial>
      <mass value="0.2"/>
      <origin rpy="0 1.5707 0" xyz="0 0 0"/>
      <inertia ixx="2.3e-06" ixy="0" ixz="0" iyy="2.3e-06" iyz="0" izz="4.5e-06"/>
    </inertial>
    
    <collision name="link_left_wheel_collision">
      <origin rpy="0 1.5707 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.0087"/>
      </geometry>
    </collision>
    
    <visual name="link_left_wheel_visual">
      <origin rpy="0 1.5707 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.0087"/>
      </geometry>      
    </visual>
    
  </link>
    
  <!--   Joint for left wheel  -->
  <joint name="joint_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0.004 0 0"/>
    <child link="link_left_wheel" />
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="1 0 0"/>
    <limit effort="5" velocity="6"/>
